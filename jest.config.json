{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./",
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1",
    "@test-unit/(.*)": "<rootDir>/test/unit/$1"
  },
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/src/main\\.ts$",
      "\\.module\\.ts$",
      "/test/", 
      "<rootDir>/dist/", 
      "prisma", 
      "<rootDir>/src/@core/application/",
      ".eslintrc.js"
    ]
}
